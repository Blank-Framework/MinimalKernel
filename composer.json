{
    "name": "blank-framework/minimal-kernel",
    "description": "Small minimalistic kernel for handling requests",
    "type": "library",
    "require-dev": {
        "phpstan/phpstan": "^1.10",
        "squizlabs/php_codesniffer": "^3.7",
        "rector/rector": "^0.18.10"
    },
    "license": "proprietary",
    "autoload": {
        "psr-4": {
            "BlankFramework\\MinimalKernel\\": "src/"
        }
    },
    "authors": [
        {
            "name": "Adrian du Plessis",
            "email": "adrian@blankframework.com"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php": "^8.2",
        "symfony/http-foundation": "^6.3"
    },
    "scripts": {
        "static-analysis": "phpstan analyse",
        "auto-review": "rector process --dry-run",
        "code-style": "phpcs --standard=PSR12 src"
    }
}
